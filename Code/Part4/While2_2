package loop;

public class While2_2 {
    public static void main(String[] args) {
        int sum = 0;
        int i = 10;

        sum = sum+i;
        System.out.println("i= " + i + " sum=" + sum);
        i++;

        sum = sum+i;
        System.out.println("i= " + i + " sum=" + sum);
        i++;

        sum = sum+i;
        System.out.println("i= " + i + " sum=" + sum);

    }

}

// 변경사항이 발생했을 때 변경해야 하는 부분이 적을수록 좋은 코드

// 만약 i부터 하나씩 증가하는 수를 endNum(마지막 수) 까지 더한다면?
